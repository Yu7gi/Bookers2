<div class="container">
  <div class="row">
    <div class="mx-auto col-10 col-xl-6 col-lg-7 col-md-8 col-sm-9">
      <h1>welcome to <strong><i class="fa-solid fa-book"></i>Bookers</strong> !!</h1>
      <p>In <strong><i class="fa-solid fa-book"></i>Bookers</strong>,</p>
      <p>you can share and exchange your opinions, inpressions, and emotions </p>
      <p>about various books!</p>
      <% if user_signed_in? %>
        <%= link_to user_path(current_user.id), class: "text-light" do %>
          <button class="btn btn-info btn-block mb-3">Log in</button>
        <% end %>
        <%= link_to user_path(current_user.id), class: "text-light" do %>
          <button class="btn btn-success btn-block mb-3">Sign up</button>
        <% end %>
      <% else %>
        <%= link_to new_user_session_path, class: "text-light" do %>
          <button class="btn btn-info btn-block mb-3">Log in</button>
        <% end %>
        <%= link_to new_user_registration_path, class: "text-light" do %>
          <button class="btn btn-success btn-block mb-3">Sign up</button>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

