<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/list', books: @books, user: @user, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <% @books.each do |book| %>
        <table class="table table-hover table-inverse">
          <thead>
            <tr><th></th><th>Title</th><th>Opinion</th><th colspan="3"></th></tr>
          </thead>
          <tbody>
            <tr><td><a href="/users/:id"><%= image_tag user.get_profile_image(80, 80) %></a></td><td><a href="/books/:id"><%= book.title %></a></td><td><%= book.body %></td></tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>
