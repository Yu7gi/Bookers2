<div class="container mt-3">
  <div class="row">
    <div class="col-md-3">
      <%= render 'list', user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user.id) do %>
                <%= image_tag @user.get_profile_image(80,80) %><%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to @book.title, book_path(@book.id) %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <% if @book.user == current_user %>
              <td>
                <button class="btn btn-success">
                  <%= link_to "Edit", edit_book_path(@book.id), class: "text-light" %>
                </button>
              </td>
              <td>
                <button class="btn btn-danger">
                  <%= link_to "Destroy", book_path(@book), class: "text-light", method: :delete %>
                </button>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>