<h2>User info</h2>
<%= image_tag user.get_profile_image(100,100) %>
<table>
  <tbody>
    <tr></tr>
    <tr><th>name</th><th><%= user.name %></th></tr>
    <tr><th>introduction</th><th><%= user.introduction %></th></tr>
  </tbody>
</table>

<div class="row">
  <a class="btn btn-outline-secondary btn-block" href="/users/:id/edit"><i class="fa-solid fa-user-gear"></i></a>
</div>

<h2 class="mt-3">New book</h2>
<%= form_with model: book do |f| %>
  <div class="field">
    <%= f.label :Title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :Opinion %><br />
    <%= f.text_field :body %>
  </div>
  <button class="btn btn-success" type="submit">Create Book</button>
<% end %>